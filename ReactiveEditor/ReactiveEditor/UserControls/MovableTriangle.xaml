<local:MovableControl
    x:Class="ReactiveEditor.UserControls.MovableTriangle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReactiveEditor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ReactiveEditor.ViewModels"
    Width="{Binding Width}"
    Height="{Binding Height}"
    d:DataContext="{d:DesignInstance vm:TriangleVM,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="20"
    d:DesignWidth="40"
    x:TypeArguments="vm:TriangleVM"
    mc:Ignorable="d">
    <Grid>
        <Polygon
            Fill="Blue"
            Points="0,1 1,1 0.5,0"
            Stretch="Fill"
            Stroke="Black" />
    </Grid>
</local:MovableControl>