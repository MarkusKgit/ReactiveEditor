<local:MovableControl
    x:Class="ReactiveEditor.UserControls.MovableSquare"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReactiveEditor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ReactiveEditor.ViewModels"
    Width="{Binding Width}"
    Height="{Binding Height}"
    d:DataContext="{d:DesignInstance vm:SquareVM,
                                     IsDesignTimeCreatable=True}"
    x:TypeArguments="vm:SquareVM"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{Binding Color}" />
        </Grid.Resources>
        <Rectangle Fill="{StaticResource BackgroundBrush}" />
    </Grid>
</local:MovableControl>