<local:MovableControl
    x:Class="ReactiveEditor.UserControls.MovableCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReactiveEditor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ReactiveEditor.ViewModels"
    Width="{Binding Width}"
    Height="{Binding Height}"
    d:DataContext="{d:DesignInstance vm:CircleVM,
                                     IsDesignTimeCreatable=True}"
    x:TypeArguments="vm:CircleVM"
    mc:Ignorable="d">
    <Grid>
        <Ellipse Fill="Black" />
    </Grid>
</local:MovableControl>