<local:MovableCircleNonGeneric
    x:Class="ReactiveEditor.UserControls.MovableCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReactiveEditor.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="{Binding Width, FallbackValue=40}"
    Height="{Binding Height, FallbackValue=40}"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <SolidColorBrush x:Key="BackgroundBrush" Color="{Binding Color, FallbackValue=Black}" />
        </Grid.Resources>
        <Ellipse Fill="{StaticResource BackgroundBrush}" Stroke="Black" />
    </Grid>
</local:MovableCircleNonGeneric>